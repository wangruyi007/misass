/* pages/talk/talk.wxss */
.container{
  padding-bottom: 88rpx;
}
.send-box{
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  width: 100%;
  height: 88rpx;
  background: #fff;
  z-index: 1;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #eee;
  display: flex;
}
.input{
  flex: 1;
  border-bottom: 1px solid #eee;
  margin-right: 18rpx;
  font-size: 28rpx;
  color: #424242;
  padding: 0 4rpx;
  margin-top: 10rpx;
}
.send{
  width: 68rpx;
  height: 68rpx;
}
.talk-box{
  padding: 24rpx 31rpx;
}
.time-box{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.time{
  text-align: center;
  color: #bdbdbd;
  font-size: 20rpx;
}
.talk-content-my{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 18rpx;
}
.head{
  width: 74rpx;
  min-width: 74rpx;
  height: 74rpx;
}
.words{
  font-size: 28rpx;
  max-width: 500rpx;
  
  border-radius: 10rpx;
  position: relative;
}
.talk-content-my .words{
  background: #28B6F6;
  color: #fff;
  margin-right: 28rpx;
  padding: 23rpx 15rpx 23rpx 20rpx;
}
.talk-content-my .words::after{
  content: '';
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-left: 16rpx solid #28B6F6;
  border-bottom: 8rpx solid transparent;
  position: absolute;
  right: -16rpx;
  top: 20rpx;
}
.talk-content-he{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 18rpx;
}
.talk-content-he .words{
  background: #fff;
  color: #424242;
  margin-left: 28rpx;
  border: 1px solid #eee;
  padding: 23rpx 20rpx 23rpx 15rpx;
}
.talk-content-he .words::before{
  content: '';
  width: 0;
  height: 0;
  border-top: 6rpx solid transparent;
  border-right: 14rpx solid #fff;
  border-bottom: 6rpx solid transparent;
  position: absolute;
  left: -14rpx;
  top: 20rpx;
  z-index: 2;
}
.talk-content-he .words::after{
  content: '';
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-right: 16rpx solid #eee;
  border-bottom: 8rpx solid transparent;
  position: absolute;
  left: -18rpx;
  top: 18rpx;
  z-index: 1;
}