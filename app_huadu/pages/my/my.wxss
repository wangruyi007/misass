/* pages/my/my.wxss */
.container{
  padding-bottom: 100rpx;
}
.h-t{
  height: 180rpx;
  background: #fafafa;
}
.head{
  height: 120rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
}
.head-img{
  width: 118rpx;
  min-width: 118rpx;
  height: 118rpx;
  margin-right: 22rpx;
}
.h-r{
  display: flex;
  flex-direction: column;
  padding-top: 25rpx;
}
.h-r-top{
  font-size: 28rpx;
  margin-bottom: 22rpx;
}
.h-r-bottom{
  font-size: 24rpx;
}
.h-r-top text:nth-child(1),.h-r-bottom text:nth-child(1){
  margin-right: 18rpx;
}
.gray{
  color: #9e9e9e;
}
.blue{
  color: #29b6f6;
}
.info-form{
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 24rpx 32rpx;
}
.red-tip{
  color: #f76260;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}
.gray-tip{
  color: #bdbdbd;
}
.info-input{
  height: 76rpx;
  border: 1px solid #eee;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  position: relative;
}
.info-ico{
  width: 36rpx;
  height: 28rpx;
}
.input-content{
  font-size: 28rpx;
  color: #424242;
  flex: 1;
  padding: 0 16rpx;
  z-index: 1;
}
.button-identifying-code{
  width: 240rpx;
  background: #29b6f6;
  color: #fff;
}
.down{
  width: 22rpx;
  height: 12rpx;
  position: absolute;
  top: 50%;
  right: 18rpx;
  margin-top: -6rpx;
}
.sexSelect{
  width: 100%;
  position: absolute;
  z-index: 1;
  top: 68rpx;
  left: -1px;
  background: #fff;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  border-radius: 0 0 16rpx 16rpx; 
  overflow: hidden;
}
.sexSelect view{
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding: 0 68rpx;
  height: 76rpx;
}
.sexSelect view:hover{
  background: rgba(41,182,246,0.2);
}
.sub-info{
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #fff;
  width: 400rpx;
  height: 90rpx;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sub-info-success{
  background: #29b6f6;
}
.want{
  font-size: 32rpx;
  color: #50ca84;
  text-decoration: underline;
  margin-top: 48rpx;
  text-align: center;
}
.info-ico-c{
  width: 34rpx;
  height: 34rpx;
}
.shouji{
  height: 40rpx;
}

.confim{
  transform:rotate(90deg);
}
