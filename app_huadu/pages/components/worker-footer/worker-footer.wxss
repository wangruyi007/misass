/* pages/components/worker-footer/worker-footer.wxss */
.footer{
  height: 100rpx;
  width: 100%;
  background: #fff;
  border-top: 1px solid #eee;
  position: fixed;
  bottom: 0;
  display: flex;
  z-index: 1;
}
.icon{
	width: 50rpx;
	height: 44rpx;
}
.text{
	font-size: 24rpx;
	margin-top: 4rpx;
	color: #9e9e9e;
}
.text-color{
	font-size: 24rpx;
	margin-top: 4rpx;
	color: #29b6f6;
}
.footer-view{
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}