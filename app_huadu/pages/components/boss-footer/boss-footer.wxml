<!--pages/components/boss-footer/boss-footer.wxml-->
<view class="footer">
  <view class="footer-view" bindtap="toRecruit">
  	<image class="icon" src="{{workPath}}"></image>
  	<text class="text {{textColor}}">招人</text>
  </view>
  <view class="footer-view" bindtap="toMessage">
  	<image class="icon" src="{{messagePath}}"></image>
  	<text class="text {{textColorMessage}}">消息</text>
  </view>
  <view class="footer-view" bindtap="toMy">
  	<image class="icon" src="{{myPath}}"></image>
  	<text class="text {{textColorMy}}">我的</text>
  </view>
</view>
