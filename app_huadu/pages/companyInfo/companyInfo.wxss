/* pages/companyInfo/companyInfo.wxss */
.info-form{
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 24rpx 32rpx;
}
.red-tip{
  color: #f76260;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}
.info-input{
  height: 76rpx;
  border: 1px solid #eee;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  position: relative;
}
.info-ico{
  width: 34rpx;
  height: 34rpx;
}
.shouji{
  height: 40rpx;
}
.input-content{
  font-size: 28rpx;
  color: #424242;
  flex: 1;
  padding: 0 16rpx;
}
.down{
  width: 22rpx;
  height: 12rpx;
  position: absolute;
  top: 50%;
  right: 18rpx;
  margin-top: -6rpx;
}
.sexSelect{
  width: 100%;
  position: absolute;
  top: 68rpx;
  left: -1px;
  background: #fff;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  border-radius: 0 0 16rpx 16rpx; 
  overflow: hidden;
}
.sexSelect view{
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding: 0 68rpx;
  height: 76rpx;
}
.sexSelect view:hover{
  background: rgba(41,182,246,0.2);
}
.sub-info{
  margin-top: 180rpx;
  font-size: 28rpx;
  color: #fff;
  width: 400rpx;
  height: 90rpx;
  background: #29b6f6;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sub-info-default{
  background: #eee;
}

.button-identifying-code{
  width: 240rpx;
  background: #29b6f6;
  color: #fff;
}

.down{
  width: 22rpx;
  height: 12rpx;
  position: absolute;
  top: 50%;
  right: 18rpx;
  margin-top: -6rpx;
}
.confim{
  transform:rotate(90deg);
}