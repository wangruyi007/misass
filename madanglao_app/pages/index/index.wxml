<!--index.wxml-->
<view class="container">
  <view class='banner'>{{zise_big}}</view>

    <view class='content'>
            <view class='ms_left'>
                        <view class='ms_left_list {{ifIndex == index?"active":""}}' wx:for="{{array}}" wx:for-item="list" wx:key="*this" bindtap='jumpTo' data-opt = "list{{index}}">
                                <image wx:if="{{ifIndex == index}}" class="ms_left_img" src='{{list.imgSrc}}'/>
                              <text class='list_vul'>{{list.name}}</text>
                        </view>
            </view>
              <scroll-view 
                  scroll-into-view="{{toView}}" 
                  scroll-y="true" 
                  scroll-with-animation="true" 
                  class="scr">
                  <view class='ms_right'>
                    <view class='ms_right_box' wx:for="{{teaArray}}" wx:for-item="list"     id="list{{index}}">
                          <view class='ms_right_tea'>
                              <image  class='ms_right_img' src='{{list.imgSrc}}'/>  
                          </view>
                          <view class='ms_right_price'>
                              <view class='ms_price_top'>
                                          <view class='price_box'>
                                                <text>{{list.teaName}}</text>
                                                <label>
                                                      <text>{{list.moneyCode}}</text>
                                                      <text>{{list.money}}</text>
                                                      <text>{{list.qi}}</text>
                                                      <text>{{list.star}}</text>
                                                </label>
                                          </view> 
                              </view>
                              <view class='ms_price_bottom'>
                                  <view class='tea-size' wx:for="{{list.sizeArr}}" wx:for-item="siezArr">
                                    <text class='tea_size_type'>{{siezArr.cupZize}}</text>
                                    <label class='{{zise_big?"tea_size_num":""}}'>
                                      <text class='tea_size_min'>{{siezArr.del}}</text>
                                      <input  type='number'   value='{{siezArr.num}}'/>
                                      <text class='tea_size_add'>{{siezArr.add}}</text>
                                    </label>
                                  </view> 
                              </view>
                          </view>
                      </view>
                  </view>
            </scroll-view>
    </view>

    <view class='footer'>
      <view class='footer-top'>
          <view class='footer-top-left'>大杯鲜奶抹茶</view>
          <view class='footer-top-right'>
                <view class='footer-top-price'>
                    <text>￥</text>
                    <text>17</text>
                </view>
                <view class='footer-top-count'>
                    <text>-</text>
                    <input value='666'/>
                    <text class='add'>+</text>
                </view>
          </view>
      </view>
      <view class='footer-bottom'>
        <view class='footer-left'>
            <label class='footer-lab'>
              <view class='footer-icon'>
                <image src='../../images/car.png'/>
                <text class='footer-icon-msg'>1</text>
              </view>
              <view class='footer-lab-price'>
                <text class='price_samll'>￥</text>
                <text>17</text>
              </view>
            </label>  
        </view>
          <view class='footer-right'>
              <text>选好了</text>
              <text>{{char_lt}}</text>
          </view>
      </view>
    </view>
</view>
